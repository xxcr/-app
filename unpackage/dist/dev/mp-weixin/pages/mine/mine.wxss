.bgcolor {
  background: #00f0f0;
}
.bgcolor .container {
    margin-top: -12px;
    padding-top: 12px;
    margin-bottom: -12px;
    padding-bottom: 12px;
}
.bgcolor .container .status_bar {
      height: 25px;
      width: 100%;
}
.bgcolor .container .nav {
      height: 40px;
      position: relative;
}
.bgcolor .container .nav .icon {
        font-size: 26px;
        color: #FFFFFF;
        position: absolute;
        right: 12px;
        top: 50%;
        -webkit-transform: translate(0, -30%);
                transform: translate(0, -30%);
}
.bgcolor .container .card-1 {
      position: relative;
}
.bgcolor .container .card-1 .uni-card__footer {
        border-top: 0;
        padding: 15px;
        padding-top: 0;
}
.bgcolor .container .card-1 .uni-card {
        overflow: visible;
}
.bgcolor .container .card-1 .imgShadow, .bgcolor .container .card-1 .headerImg {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        position: absolute;
        top: 0;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
}
.bgcolor .container .card-1 .imgShadow {
        width: 70px;
        height: 70px;
        background-color: #00f0f0;
        opacity: 0.2;
}
.bgcolor .container .card-1 .info {
        margin-top: 24px;
        text-align: center;
}
.bgcolor .container .card-1 .info .name {
          font-size: 18px;
          line-height: 34px;
}
.bgcolor .container .card-1 .info .major {
          font-size: 14px;
}
.bgcolor .container .card-1 .footerTitle {
        font-size: 17px;
        margin-top: 6px;
        margin-bottom: 0px;
}
.bgcolor .container .card-1 .footer-box {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
}
.bgcolor .container .card-1 .footer-box .foterItem {
          width: 25%;
          font-size: 13px;
          text-align: center;
}
.bgcolor .container .card-1 .footer-box .foterItem .itemBox {
            width: 50px;
            height: 50px;
            line-height: 50px;
            border-radius: 50%;
            box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.1);
            margin: 15px auto;
}
.bgcolor .container .card-1 .footer-box .foterItem .itemBox .icon {
              font-size: 35px;
}
.bgcolor .container .card-2 .uni-card__header {
      border: 0;
      padding-bottom: 3px;
}
.bgcolor .container .card-2 .uni-card__content {
      padding-top: 4px;
      padding-bottom: 6px;
}
.bgcolor .container .card-2 .uni-card__content .uni-list-item__container {
        padding: 10px 0px;
}
.bgcolor .container .card-2 .uni-card__content .uni-list-item__container .uni-list-item__icon {
          margin-right: 10px;
}
.bgcolor .container .card-2 .uni-list-item__container::after {
      opacity: 0.5;
}
.bgcolor .container .card-3 .uni-card__header {
      border: 0;
}
.bgcolor .container .card-3 .uni-card__content {
      padding-top: 4px;
      padding-bottom: 6px;
}
.bgcolor .container .card-3 .uni-card__content .uni-list-item__container {
        padding: 11px 0px;
}
.bgcolor .container .card-3 .uni-card__content .uni-list-item__container .uni-list-item__icon {
          margin-right: 10px;
}
.bgcolor .container .card-3 .uni-list-item__container::after {
      opacity: 0.5;
}

