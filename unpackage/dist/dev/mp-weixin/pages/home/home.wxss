.bgcolor {
  background: #00f0f0;
}
.bgcolor .container {
    margin-top: -12px;
    padding-top: 12px;
    margin-bottom: -12px;
    padding-bottom: 12px;
}
.bgcolor .container .card_1 {
      position: relative;
      height: 150px;
}
.bgcolor .container .card_1 .text {
        color: #FFFFFF;
        font-size: 15px;
        position: absolute;
        top: 22%;
        left: 15px;
        line-height: 30px;
        width: 240px;
        text-indent: 2em;
}
.bgcolor .container .card_1::after {
      content: "";
      background: url(/static/image/bg.png) no-repeat;
      background-size: 750rpx 150px;
      opacity: 0.5;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      position: absolute;
}
.bgcolor .container .card_2 .title image {
      width: 125px;
      height: 35px;
}
.bgcolor .container .card_2 .itemBox {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
      text-align: center;
}
.bgcolor .container .card_2 .itemBox .item {
        width: 25%;
        font-size: 15px;
        margin-top: 15px;
        margin-bottom: 15px;
}
.bgcolor .container .card_2 .itemBox .item .icon {
          font-size: 30px;
          margin-bottom: 8px;
}
.bgcolor .container .card_3 {
      font-size: 21px;
}
.bgcolor .container .card_3 .tit {
        width: 3px;
        height: 12px;
        background-color: #00b7ff;
        color: #00b7ff;
        margin-right: 10px;
}
.bgcolor .container .card_3 .title {
        margin-right: 12px;
}
.bgcolor .container .card_3 .total {
        float: right;
        font-size: 12px;
        border: 1px solid #b4b4b4;
        border-radius: 13px;
        padding: 5px 5px 0px 5px;
}
.bgcolor .container .card_3 .scheduleBox {
        padding-left: 5px;
        font-size: 17px;
}
.bgcolor .container .card_3 .scheduleBox .schedule {
          margin-top: 8px;
          margin-bottom: 8px;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-box-align: center;
          -webkit-align-items: center;
                  align-items: center;
}
.bgcolor .container .card_3 .scheduleBox .schedule .uncomplete {
            color: #4CD964;
}
.bgcolor .container .card_3 .scheduleBox .schedule .complete {
            color: #DD4A68;
}
.bgcolor .container .card_3 .scheduleBox .schedule .icon {
            margin-right: 8px;
            font-size: 20px;
            -webkit-transform: translate(0, -10%);
                    transform: translate(0, -10%);
}
.bgcolor .container .card_3 .scheduleBox .schedule .time {
            margin-right: 30px;
}

