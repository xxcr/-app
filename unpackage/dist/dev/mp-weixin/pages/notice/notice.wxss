.bgcolor {
  background: #00f0f0;
}
.bgcolor .container {
    margin-top: -12px;
    padding-top: 12px;
    margin-bottom: -12px;
    padding-bottom: 12px;
}
.bgcolor .container .segmented-control {
      padding: 0 12px;
      padding-top: 8px;
}
.bgcolor .container .segmented-control .segmented-control__item {
        border-bottom-width: 0;
}
.bgcolor .container .segmented-control .segmented-control__item .segmented-control__text {
          font-size: 14px;
          border-bottom-style: solid;
          padding-bottom: 6px;
          border-bottom-width: 2px;
}
.bgcolor .container .scroll-Y {
      width: 706rpx;
      height: 90vh;
      margin: 12px;
}
.bgcolor .container .card .card_content {
      padding: 0 8px;
      font-size: 14px;
      box-sizing: border-box;
      background: white;
      box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.08);
      border-radius: 10px;
      margin-bottom: 30rpx;
      padding: 10px;
}
.bgcolor .container .card .card_content .title {
        margin-bottom: 10px;
}
.bgcolor .container .card .card_content .title .source {
          font-size: 15px;
          font-weight: bold;
}
.bgcolor .container .card .card_content .content {
        height: 60px;
        margin-left: 5px;
}
.bgcolor .container .card .card_content .content .text {
          line-height: 23px;
}
.bgcolor .container .card .card_content .schedule_Time {
        margin-left: 5px;
}

